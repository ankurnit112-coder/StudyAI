{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "warn",
    "react/no-unescaped-entities": "error",
    "no-console": "off",
    "prefer-const": "warn"
  },
  "ignorePatterns": [
    ".next/**",
    "node_modules/**",
    "out/**",
    "build/**",
    "dist/**",
    "backend/**",
    "*.config.js",
    "*.config.mjs",
    "deploy-vercel.js",
    "verify-deployment.js"
  ]
}