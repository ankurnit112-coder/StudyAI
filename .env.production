# Production Environment Variables
# Copy this file to .env.prod on your production server

# Database Configuration (SQLite fallback for development)
DATABASE_URL=sqlite:///./studyai_prod.db
DB_PASSWORD=your-secure-database-password-here

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-secure-redis-password-here

# API Security
SECRET_KEY=your-super-secure-secret-key-for-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ML Configuration
ML_MODEL_PATH=/app/models
TRAINING_DATA_PATH=/app/data
MIN_TRAINING_SAMPLES=1000

# Application Settings
NODE_ENV=production
DEBUG=false
LOG_LEVEL=INFO
AUTO_TRAINING_ENABLED=true

# SSL/TLS Configuration
ACME_EMAIL=admin@yourdomain.com

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# External Services
NEXT_PUBLIC_API_URL=https://api.studyai.yourdomain.com

# CBSE Configuration (using defaults from config.py)
# These are loaded from the application configuration